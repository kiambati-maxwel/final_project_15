<odoo>
    <data>
        <record id="chicken_cull_eggs_view" model="ir.ui.view">
            <field name="name">Eggs</field>
            <field name="model">chicken.eggs</field>
            <field name="arch" type="xml">
                <tree string="Eggs Entry" class="o_list_view ">
                    <field name="eggs_ref" string="Eggs Entry Ref"/>
                    <field name="quantity" string="Quantity"/>
                    <field name="date" string="Date"/>
                    <field name="batch_id" string="Batch" modifiers="{'tree_invisible': True}"/>
                    <field name="responsible" string="Responsible"/>
                    <field name="comment" string="Comment"/>
                </tree>
            </field>
        </record>

        <!-- üé® Enhanced and User-Friendly Form View -->
        <record id="chicken_eggs_form_view" model="ir.ui.view">
            <field name="name">ü•ö Eggs Form</field>
            <field name="model">chicken.eggs</field>
            <field name="arch" type="xml">
                <form string="ü•ö Eggs Entry">
                    <sheet>
                        <group>
                            <group string="‚ÑπÔ∏è Eggs Details" colspan="2">
                                <field name="eggs_ref" placeholder="üîñ Enter Egg Entry Reference"/>
                                <field name="quantity" widget="handle" string="üì¶ Quantity"/>
                                <field name="date" widget="date" string="üìÖ Date"/>
                                <field name="batch_id" options="{'no_create': True}" placeholder="üì¶ Select Batch"/>
                                <field name="responsible" options="{'no_quick_create': True}" placeholder="üë§ Select Responsible"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="üí¨ Additional Info">
                                <group>
                                    <field name="comment" placeholder="‚úçÔ∏è Add any relevant comments"/>
                                </group>
                            </page>
                        </notebook>
                        <!--                        <footer>-->
                        <!--                            <button string="üíæ Save" type="object" class="btn-primary"/>-->
                        <!--                            <button string="‚ùå Cancel" type="object" class="btn-secondary"/>-->
                        <!--                        </footer>-->
                    </sheet>
                </form>
            </field>
        </record>


          <!-- üîç Enhanced Search View -->
        <record id="chicken_eggs_search_view" model="ir.ui.view">
            <field name="name">üîç Eggs Search</field>
            <field name="model">chicken.eggs</field>
            <field name="arch" type="xml">
                <search>
                    <field name="eggs_ref" string="üîñ Entry Ref"/>
                    <field name="date" string="üìÖ Date" filter_domain="[('date', '>=', context_today())]"/>
                    <field name="batch_id" string="üì¶ Batch"/>
                    <field name="quantity" string="üì¶ Quantity"/>
                    <field name="responsible" string="üë§ Responsible"/>
                    <field name="comment" string="üí¨ Comment"/>
                    <group expand="0" string="üìä Group By">
                        <filter name="group_by_batch" string="üì¶ Batch" context="{'group_by': 'batch_id'}"/>
                        <filter name="group_by_date" string="üìÖ Date" context="{'group_by': 'date'}"/>
                        <filter name="group_by_responsible" string="üë§ Responsible" context="{'group_by': 'responsible'}"/>
                        <filter name="group_by_quantity" string="üì¶ Quantity" context="{'group_by': 'quantity'}"/>
                    </group>
                </search>
            </field>
        </record>


